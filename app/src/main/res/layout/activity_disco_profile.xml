<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.find_d.findd.DiscoProfileActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ToolbarTheme" />

    <ImageView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/white"
        android:id="@+id/iFotodisco"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@color/gray"
        android:alpha="0.26"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="116dp"
        android:background="@color/gray"
        android:alpha="0.28"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="176dp"
        android:background="@color/gray"
        android:alpha="0.3"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="160dp"
        android:textSize="25sp"
        android:id="@+id/tInfod"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/whitesmoke"

        android:text="Información de la discoteca
Precio
"/>
    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/rating_bar_profile"
        android:rating="5"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="220dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="246dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:text="hola"

                android:id="@+id/tDescripcion"
                />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lReseñas"
                android:layout_marginTop="70dp"></ListView>
        </LinearLayout>


    </ScrollView>

</FrameLayout>
